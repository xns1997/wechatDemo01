/* components/add-card/index.wxss */

.add-card-outer{
    display: flex;
    border-radius: 10px;
    background-color: white;
    padding: 5px;
    flex-direction: row;
    align-items: center;
    height: 100%;    
}
.add-card-title{
    flex:2;
}
.add-card-three-circles{
    display: flex;
}
.add-card-circle{
    height: 30px;
    width: 30px;
    border-radius: 50%;
    background-color: rgb(0, 110, 255);
    text-align: center;
    font-size: 20px;
    border: solid white 3px;
    margin-left: -10px;
}
.add-card-go{
    float: right;
    width: 30px;
    padding: 0;
    display: flex;
}
.add-card-go-button{
    width: 100%;
    padding: 0;
    background-color: white;
}